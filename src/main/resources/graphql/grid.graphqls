enum GridComponentType {
    CHATTING
}

type GridComponentProps {
    id: ID!
    chat_thread_id: ID
}

type Grid {
    id: ID!
    name: String
}

type GridData {
    key: ID!

    x: Int!
    y: Int!
    w: Int!
    h: Int!

    maxH: Int
    maxW: Int
    minH: Int
    minW: Int

    isDraggable: Boolean
    isResizable: Boolean
    isStatic: Boolean
    draggableHandle: String
}

input GridDataInput {
    x: Int
    y: Int
    w: Int
    h: Int

    maxH: Int
    maxW: Int
    minH: Int
    minW: Int

    isDraggable: Boolean
    isResizable: Boolean
    isStatic: Boolean
    draggableHandle: String
}

type GridDraggableProps {
    id: ID!
    gridId: ID!
    gridData: GridData!
    gridComponentType: GridComponentType
    gridComponentProps: GridComponentProps
}

extend type Query {
    getGridDraggableProps(grid_id: ID!): [GridDraggableProps]!
    getGrids(userId: ID!): [Grid]!
}

extend type Mutation {
    changeGridLayout(grid_id: ID!, gridDraggableProps_id: ID!, newGridData: GridDataInput!): GridData!
    updateGridName(grid_id: ID!, name: String!): Grid!
    newGrid(name: String!, userId: ID!): Grid!
    deleteGrid(gridId: ID!): Boolean!
}
