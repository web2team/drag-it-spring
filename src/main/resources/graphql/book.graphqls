type Book {
    id: ID!
    title: String!
    isbn: String!
    pageCount: Int
    user: User
}

extend type Query {
    findAllBooks: [Book]!
    countBooks: Long!
    findOneBook(username: ID!): Book!
}

extend type Mutation {
    newBook(title: String!, isbn: String!, pageCount: Int, user: ID!) : Book!
    deleteBook(username: ID!) : Boolean
    updateBookPageCount(pageCount: Int!, username: ID!) : Book!
}