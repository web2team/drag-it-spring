type Chat {
    id: ID!
    username: String!
    contents: String!
    createdAt: String!
    chatThreadId: ID!
}

extend type Query {
    getAllMessages(chat_thread_id: ID!): [Chat]!
    getMessages(chat_thread_id: ID!, page: Int!, size: Int!): [Chat]!
}

extend type Mutation {
    newChatMessage(chat_thread_id: ID!, username: String! contents: String!): Chat!
}

extend type Subscription {
    ChatMessage(chat_thread_id: ID!): Chat
}
